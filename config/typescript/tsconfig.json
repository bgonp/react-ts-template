{
  "compilerOptions": {
    "baseUrl": "../../src",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es6",
    "sourceMap": true,
    "jsx": "react-jsx",
    "allowJs": false,
    "moduleResolution": "node",
    "strict": true,
    "lib": ["esnext", "dom"],
    "typeRoots": ["../../src/types.d.ts", "../../node_modules/@types"],
    "esModuleInterop": true
  },
  "include": ["../../src/**/*"]
}
